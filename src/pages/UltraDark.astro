---
import Layout from '../layouts/Layout.astro';
import NavBarUltra from '@/components/Ultra/NavBarUltra.astro';
---

<Layout>
  <NavBarUltra />
  
<div class="min-h-screen bg-[#0b0d10] text-white overflow-hidden
            selection:bg-red-600/40 selection:text-white">

  <!-- ================= AMBIENT GLOW (REFINED) ================= -->
  <div class="fixed inset-0 pointer-events-none z-0">
    <div class="absolute -top-40 left-1/3 w-120 h-120
                bg-red-700/20 blur-[160px]"></div>
    <div class="absolute bottom-0 right-1/4 w-104 h-104
                bg-yellow-500/10 blur-[200px]"></div>
  </div>

  <!-- ================= HERO ================= -->
<section class="relative z-10 px-6
               pt-28 sm:pt-36 lg:pt-56
               pb-8 sm:pb-28 lg:pb-32">


    <!-- Hero focus ring -->
    <div class="absolute inset-0 flex justify-center items-center pointer-events-none">
      <div class="w-[70vw] h-[70vw] max-w-225 max-h-225
                  border border-white/5 rounded-full"></div>
    </div>

    <div class="max-w-7xl mx-auto">

<div class="text-center max-w-4xl mx-auto
            mb-16 sm:mb-20 lg:mb-24">


        <span
          class="inline-block mb-8 px-6 py-2 rounded-full
                 text-[11px] tracking-[0.35em]
                 bg-white/5 border border-white/10
                 text-red-400"
        >
          BULLETTE · ULTRA SERIES
        </span>

        <h1
          class="text-4xl sm:text-5xl lg:text-6xl xl:text-7xl
                 font-bold leading-[1.05]"
        >
          Electrical Power,
          <span
            class="block text-transparent bg-clip-text
                   bg-linear-to-r from-red-600 to-red-400"
          >
            Engineered Without Compromise
          </span>
        </h1>

        <p
          class="mt-8 text-base sm:text-lg lg:text-xl
                 text-gray-400 max-w-3xl mx-auto leading-relaxed"
        >
          Ultra is Bullette’s professional-grade lineup —
          engineered for installers, contractors, and
          long-term operational reliability.
        </p>

        <div
          class="mt-12 flex flex-col sm:flex-row
                 justify-center gap-5 sm:gap-6"
        >
          <a
            href="/products"
            class="relative overflow-hidden
                   px-8 py-4 rounded-xl
                   bg-gradient-to-r from-red-600 to-red-500
                   text-white font-semibold
                   hover:scale-[1.04] transition
                   before:absolute before:inset-0
                   before:bg-gradient-to-r
                   before:from-transparent before:via-white/20 before:to-transparent
                   before:translate-x-[-100%]
                   hover:before:translate-x-[100%]
                   before:transition before:duration-700"
          >
            Explore Ultra Products
          </a>

          <a
            href="#vision"
            class="px-8 py-4 rounded-xl
                   border border-white/20
                   hover:border-red-500 transition"
          >
            Why Ultra
          </a>
        </div>

      </div>

      <!-- ================= BENTO GRID ================= -->
<div class="grid grid-cols-1 md:grid-cols-6
            gap-4 sm:gap-6">


        <!-- Main Philosophy -->
        <div
          class="md:col-span-4 rounded-3xl p-8 sm:p-10
                 bg-gradient-to-br from-zinc-900/80 via-black to-zinc-950
                 border border-white/5 backdrop-blur
                 hover:-translate-y-1 transition-all"
        >
          <h3 class="text-xl sm:text-2xl font-semibold">
            Ultra Philosophy
          </h3>

          <p class="mt-4 text-gray-400 max-w-xl">
            Fewer products. Higher standards. Every Ultra product is
            engineered with controlled tolerances, premium materials,
            and installer-first thinking.
          </p>

          <div class="mt-6 flex flex-wrap gap-x-6 gap-y-2
                      text-sm text-gray-300">
            <span>• Precision Engineering</span>
            <span>• Limited Production</span>
            <span>• Real-world Tested</span>
          </div>

          <div class="mt-8 h-px w-full bg-gradient-to-r
                      from-transparent via-red-500/40 to-transparent"></div>
        </div>

        <!-- Side Card -->
        <div
          class="md:col-span-2 rounded-3xl p-8
                 bg-white/5 border border-white/5 backdrop-blur
                 hover:-translate-y-1 transition-all"
        >
          <h4 class="text-lg font-semibold">
            Built for Installers
          </h4>
          <p class="mt-3 text-sm text-gray-400">
            Designed around real wiring conditions —
            not lab-only specifications.
          </p>
        </div>

        <!-- Product Teasers -->
        <div
          class="md:col-span-3 rounded-3xl p-8
                 bg-zinc-900/80 border border-white/5
                 hover:-translate-y-1 transition-all"
        >
          <h4 class="text-lg font-semibold">
            LED Panel Ultra
          </h4>
          <p class="mt-2 text-sm text-gray-400">
            Stable-output lighting for commercial installations.
          </p>
          <span
            class="mt-4 inline-block text-xs tracking-widest
                   text-red-500"
          >
            AVAILABLE
          </span>
        </div>

        <div
          class="md:col-span-3 rounded-3xl p-8
                 bg-zinc-900/80 border border-white/5
                 hover:-translate-y-1 transition-all"
        >
          <h4 class="text-lg font-semibold">
            Flood Light Ultra
          </h4>
          <p class="mt-2 text-sm text-gray-400">
            Outdoor lighting built for extreme environments.
          </p>
          <span
            class="mt-4 inline-block text-xs tracking-widest
                   text-yellow-400"
          >
            UPCOMING
          </span>
        </div>

      </div>
    </div>
  </section>

  <!-- ================= WHY ULTRA ================= -->
<section
  id="vision"
  class="relative z-10 px-6 py-20 sm:py-32 lg:py-44 overflow-hidden bg-gradient-to-b from-black via-[#0a0a0a] to-black text-white"
>
  <!-- Subtle background elements -->
  <div class="absolute inset-0 -z-10 overflow-hidden">
    <div class="absolute top-1/2 left-1/2 w-[800px] h-[800px] bg-red-600/10 blur-[160px] -translate-x-1/2 -translate-y-1/2 rounded-full"></div>
    <div class="absolute top-0 left-0 w-[400px] h-[400px] bg-gradient-to-br from-red-500/10 to-transparent blur-[140px]"></div>
  </div>

  <div class="max-w-6xl mx-auto text-center relative">
    <!-- Divider line -->
    <div class="mb-12 flex justify-center">
      <div class="w-28 h-px bg-gradient-to-r from-transparent via-red-500 to-transparent"></div>
    </div>

    <!-- Heading -->
    <h2
      class="text-3xl sm:text-4xl md:text-5xl font-bold mb-6 leading-tight tracking-tight"
    >
      Why <span class="text-red-500">Bullette Ultra</span> is Different
    </h2>

    <p
      class="text-gray-400 max-w-2xl mx-auto text-sm sm:text-lg md:text-xl leading-relaxed"
    >
      Ultra is not a variant — it’s a philosophy built around
      longevity, safety, and installer-grade reliability.
    </p>

    <!-- Cards -->
    <div
      class="mt-16 sm:mt-20 grid grid-cols-1 md:grid-cols-3 gap-6 sm:gap-10"
    >
      <!-- CARD 1 -->
      <div
        class="group relative p-8 sm:p-10 rounded-3xl border border-white/10 bg-white/[0.04] backdrop-blur-md transition-all duration-500 hover:border-red-500/40 hover:shadow-[0_0_40px_-10px_rgba(239,68,68,0.5)]"
      >
        <div
          class="absolute inset-0 bg-gradient-to-br from-red-600/0 via-red-600/5 to-transparent opacity-0 group-hover:opacity-100 transition-all duration-500 rounded-3xl"
        ></div>

        <div class="relative z-10">
          <div
            class="mb-5 inline-flex w-12 h-12 items-center justify-center rounded-2xl bg-red-600/10 text-red-500 text-xl font-bold group-hover:bg-red-600/20 transition"
          >
            01
          </div>
          <h3
            class="text-xl sm:text-2xl font-semibold group-hover:text-white transition"
          >
            Precision Engineering
          </h3>
          <p
            class="mt-3 text-gray-400 text-sm sm:text-base leading-relaxed group-hover:text-gray-300 transition"
          >
            Tight tolerances, premium components, and reliability that
            never compromises on detail.
          </p>
        </div>
      </div>

      <!-- CARD 2 -->
      <div
        class="group relative p-8 sm:p-10 rounded-3xl border border-white/10 bg-white/[0.04] backdrop-blur-md transition-all duration-500 hover:border-red-500/40 hover:shadow-[0_0_40px_-10px_rgba(239,68,68,0.5)]"
      >
        <div
          class="absolute inset-0 bg-gradient-to-br from-red-600/0 via-red-600/5 to-transparent opacity-0 group-hover:opacity-100 transition-all duration-500 rounded-3xl"
        ></div>

        <div class="relative z-10">
          <div
            class="mb-5 inline-flex w-12 h-12 items-center justify-center rounded-2xl bg-red-600/10 text-red-500 text-xl font-bold group-hover:bg-red-600/20 transition"
          >
            02
          </div>
          <h3
            class="text-xl sm:text-2xl font-semibold group-hover:text-white transition"
          >
            Limited by Design
          </h3>
          <p
            class="mt-3 text-gray-400 text-sm sm:text-base leading-relaxed group-hover:text-gray-300 transition"
          >
            Fewer products, more attention — every model is optimized,
            not mass-produced.
          </p>
        </div>
      </div>

      <!-- CARD 3 -->
      <div
        class="group relative p-8 sm:p-10 rounded-3xl border border-white/10 bg-white/[0.04] backdrop-blur-md transition-all duration-500 hover:border-red-500/40 hover:shadow-[0_0_40px_-10px_rgba(239,68,68,0.5)]"
      >
        <div
          class="absolute inset-0 bg-gradient-to-br from-red-600/0 via-red-600/5 to-transparent opacity-0 group-hover:opacity-100 transition-all duration-500 rounded-3xl"
        ></div>

        <div class="relative z-10">
          <div
            class="mb-5 inline-flex w-12 h-12 items-center justify-center rounded-2xl bg-red-600/10 text-red-500 text-xl font-bold group-hover:bg-red-600/20 transition"
          >
            03
          </div>
          <h3
            class="text-xl sm:text-2xl font-semibold group-hover:text-white transition"
          >
            Installer First
          </h3>
          <p
            class="mt-3 text-gray-400 text-sm sm:text-base leading-relaxed group-hover:text-gray-300 transition"
          >
            Designed around real-world conditions to make installations
            faster, cleaner, and safer.
          </p>
        </div>
      </div>
    </div>
  </div>
</section>



<section class="relative z-10 px-6
                py-10 sm:py-28 lg:py-32">

  <div class="max-w-7xl mx-auto">

    <!-- Header -->
<div class="mb-10 sm:mb-14 lg:mb-16 max-w-3xl">

      <h2 class="text-4xl md:text-5xl font-bold leading-tight">
        Ultra Series<br />
        <span class="text-transparent bg-clip-text bg-gradient-to-r
                     from-red-500 via-yellow-400 to-orange-500">
          Professional Lineup
        </span>
      </h2>
      <p class="mt-4 text-gray-400">
        Precision-engineered electrical products built for installers,
        contractors, and demanding environments.
      </p>
    </div>

    <!-- Product Grid -->
    <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-3 xl:grid-cols-4 gap-8">

 <!-- ================= CARD 1 ================= -->
<div
  class="group relative rounded-3xl overflow-hidden
         bg-gradient-to-br from-zinc-900 via-black to-zinc-950
         border border-white/10 hover:border-red-500/50
         transition-all duration-300"
>

  <!-- IMAGE ZONE (DOMINANT & LIGHT) -->
  <div class="relative h-64 sm:h-72 lg:h-80 overflow-hidden">

    <!-- Light Image Backing -->
    <div
      class="absolute inset-0 bg-gradient-to-b
             from-white via-zinc-100 to-transparent
             opacity-90"
    ></div>

    <!-- Subtle Brand Glow -->
    <div
      class="absolute inset-0 bg-gradient-to-tr
             from-red-600/20 to-transparent
             opacity-0 group-hover:opacity-100 transition"
    ></div>

    <img
      src="/images/Ultra/Terminal_strip.jpeg"
      alt="Terminal Strip Ultra"
      class="relative z-10 w-full h-full object-contain
             px-10 py-6
             group-hover:scale-105 transition duration-500"
    />
  </div>

  <!-- CONTENT -->
  <div class="p-6 flex flex-col gap-3">

    <span class="text-[10px] tracking-widest text-red-500 uppercase">
      Ultra • Available
    </span>

    <h3 class="text-lg font-semibold text-white">
      Terminal Strip Ultra
    </h3>

    <p class="text-gray-400 text-sm">
      Precision terminal strips designed for secure,
      installer-grade electrical connections.
    </p>

    <ul class="mt-2 space-y-1 text-xs text-gray-300">
      <li class="flex justify-between">
        <span>Current Rating</span><span class="text-white">32A</span>
      </li>
      <li class="flex justify-between">
        <span>Body</span><span class="text-white">Flame-retardant</span>
      </li>
      <li class="flex justify-between">
        <span>Mount</span><span class="text-white">DIN / Panel</span>
      </li>
    </ul>

    <a
      href="/contact?product=terminal-strip-ultra"
      class="mt-4 inline-flex justify-center items-center
             px-4 py-3 rounded-xl text-sm font-semibold
             bg-gradient-to-r from-red-600 to-red-500
             text-white hover:scale-[1.03] transition"
    >
      Send Inquiry →
    </a>
  </div>
</div>


<!-- ================= CARD 2 ================= -->
<div
  class="group relative rounded-3xl overflow-hidden
         bg-gradient-to-br from-zinc-900 via-black to-zinc-950
         border border-white/10 hover:border-yellow-500/40
         transition-all duration-300"
>

  <!-- IMAGE ZONE -->
  <div class="relative h-64 sm:h-72 lg:h-80 overflow-hidden">

    <!-- Light Image Backing -->
    <div
      class="absolute inset-0 bg-gradient-to-b
             from-white via-zinc-100 to-transparent
             opacity-90"
    ></div>

    <!-- Soft Accent Glow -->
    <div
      class="absolute inset-0 bg-gradient-to-tr
             from-yellow-400/20 to-transparent
             opacity-0 group-hover:opacity-100 transition"
    ></div>

    <img
      src="/images/Ultra/Terminal_strip_2.jpeg"
      alt="Terminal Strip Ultra Variant"
      class="relative z-10 w-full h-full object-contain
             px-10 py-6
             group-hover:scale-105 transition duration-500"
    />
  </div>

  <!-- CONTENT -->
  <div class="p-6 flex flex-col gap-3">

    <span class="text-[10px] tracking-widest text-yellow-400 uppercase">
      Ultra • Upcoming
    </span>

    <h3 class="text-lg font-semibold text-white">
      Terminal Strip Ultra Pro
    </h3>

    <p class="text-gray-400 text-sm">
      Enhanced insulation and higher load tolerance
      for demanding installations.
    </p>

    <ul class="mt-2 space-y-1 text-xs text-gray-300">
      <li class="flex justify-between">
        <span>Current</span><span class="text-white">40A</span>
      </li>
      <li class="flex justify-between">
        <span>Ingress</span><span class="text-white">IP20</span>
      </li>
      <li class="flex justify-between">
        <span>Use</span><span class="text-white">Industrial</span>
      </li>
    </ul>

    <a
      href="/contact?product=terminal-strip-ultra-pro"
      class="mt-4 inline-flex justify-center items-center
             px-4 py-3 rounded-xl text-sm font-semibold
             border border-white/20
             hover:border-yellow-400 hover:text-yellow-400
             transition"
    >
      Request Details →
    </a>
  </div>
</div>


      <!-- ================= CARD 3 ================= -->
      <div class="rounded-3xl border border-dashed border-white/20
                  flex items-center justify-center text-gray-500 text-sm">
        Coming Soon
      </div>


    </div>
  </div>
</section>




  <!-- ================= FOOTER ================= -->
<footer class="relative z-10 border-t border-white/10
               py-6 sm:py-8 lg:py-10
               text-center text-gray-500">

    <div class="mb-6 flex justify-center">
      <div class="w-32 h-px bg-gradient-to-r
                  from-transparent via-white/20 to-transparent"></div>
    </div>
    © 2025 Bullette. Precision Electricals.
  </footer>

  </div>
</Layout>
