---
const {
  productName = "",
  productSlug = "",
} = Astro.props;

// Fallback: derive name from slug if productName is missing
const resolvedProduct =
  productName ||
  productSlug
    ?.split("-")
    .map(w => w.charAt(0).toUpperCase() + w.slice(1))
    .join(" ") ||
  "Product Inquiry";
---


<section id="inquiryForm" class="mt-16 sm:mt-24">

  <div class="container mx-auto px-4">

<div
  class="grid grid-cols-1 lg:grid-cols-2
         overflow-hidden rounded-3xl
         bg-gradient-to-br from-white to-gray-50
         border border-gray-200
         shadow-[0_20px_60px_-20px_rgba(0,0,0,0.15)]"
>


      <!-- LEFT: Context -->
      <div
        class="p-8 sm:p-10 lg:p-14
               flex flex-col justify-center"
      >
        <span class="text-xs font-semibold tracking-widest text-red-600 uppercase">
          Product Inquiry
        </span>

        <h2 class="mt-3 text-2xl lg:text-3xl font-semibold text-gray-900 leading-tight">
          Let’s discuss your requirement
        </h2>

        <p class="mt-4 text-gray-600 max-w-md leading-relaxed">
          Share your application details and specifications.
          Our technical team will help you choose the right solution.
        </p>

        {resolvedProduct && (
          <div class="mt-6 inline-flex items-center gap-2
                      rounded-xl bg-white px-4 py-2
                      text-sm text-gray-700 shadow-sm">
            <span class="text-gray-500">Product:</span>
            <span class="font-medium text-gray-900">
  {resolvedProduct}
</span>

          </div>
        )}

        <!-- TRUST SIGNALS -->
        <div class="mt-10 grid grid-cols-2 gap-4 text-sm text-gray-600">
          <div class="flex items-center gap-2">
            <span class="text-red-600">✔</span>
            Industrial-grade
          </div>
          <div class="flex items-center gap-2">
            <span class="text-red-600">✔</span>
            IEC / CE compliant
          </div>
          <div class="flex items-center gap-2">
  <span class="text-red-600">✔</span>
  India, Europe & Middle East support
</div>

          <div class="flex items-center gap-2">
            <span class="text-red-600">✔</span>
            Technical guidance
          </div>
        </div>
      </div>

      <!-- RIGHT: Form -->
<form
  method="POST"
  action="/api/inquiry"
  class="p-8 sm:p-10 lg:p-14
         bg-white space-y-6
         lg:border-l lg:border-gray-200"
>

        <input type="hidden" name="product" value={resolvedProduct} />
        <input type="hidden" name="slug" value={productSlug} />
        <!-- Honeypot (bot trap – do not remove) -->
<input
  type="text"
  name="company"
  tabindex="-1"
  autocomplete="off"
  class="hidden"
/>


        <!-- Name -->
        <div>
          <label class="block text-sm font-medium text-gray-700 mb-1">
            Full name
          </label>
          <input
            name="name"
            required
            placeholder="John Doe"
            class="w-full rounded-xl border border-gray-200 px-4 py-3
                   focus:outline-none focus:border-black
                   focus:ring-0"
          />
        </div>

        <!-- Email -->
        <div>
          <label class="block text-sm font-medium text-gray-700 mb-1">
            Email address
          </label>
          <input
            type="email"
            name="email"
            required
            placeholder="john@email.com"
            class="w-full rounded-xl border border-gray-200 px-4 py-3
                   focus:outline-none focus:border-black
                   focus:ring-0"
          />
        </div>

        <!-- Phone -->
        <div>
          <label class="block text-sm font-medium text-gray-700 mb-1">
            Phone number
          </label>
          <input
            name="phone"
            placeholder="+91 98765 43210"
            class="w-full rounded-xl border border-gray-200 px-4 py-3
                   focus:outline-none focus:border-black
                   focus:ring-0"
          />
        </div>

        <!-- Message -->
        <div>
          <label class="block text-sm font-medium text-gray-700 mb-1">
            Requirement
          </label>
          <textarea
            name="message"
            rows="4"
            placeholder="Application, quantity, voltage, etc."
            class="w-full rounded-xl border border-gray-200 px-4 py-3
                   resize-none focus:outline-none
                   focus:border-black focus:ring-0"
          ></textarea>
        </div>

        <!-- Submit -->
        <button
  type="button"
  id="whatsappBtn"
  class="w-full rounded-xl
         bg-red-600 text-white
         py-3.5 font-medium
         hover:bg-red-700
         active:bg-red-800
         transition
         flex items-center justify-center gap-3
         focus:outline-none focus:ring-2 focus:ring-red-500/40"
>
  <!-- WhatsApp Icon (inherits text color) -->
  <svg class="w-5 h-5" fill="currentColor" viewBox="-1.66 0 740.824 740.824" xmlns="http://www.w3.org/2000/svg"><g id="SVGRepo_bgCarrier" stroke-width="0"></g><g id="SVGRepo_tracerCarrier" stroke-linecap="round" stroke-linejoin="round"></g><g id="SVGRepo_iconCarrier"><path fill-rule="evenodd" clip-rule="evenodd" d="M630.056 107.658C560.727 38.271 468.525.039 370.294 0 167.891 0 3.16 164.668 3.079 367.072c-.027 64.699 16.883 127.855 49.016 183.523L0 740.824l194.666-51.047c53.634 29.244 114.022 44.656 175.481 44.682h.151c202.382 0 367.128-164.689 367.21-367.094.039-98.088-38.121-190.32-107.452-259.707m-259.758 564.8h-.125c-54.766-.021-108.483-14.729-155.343-42.529l-11.146-6.613-115.516 30.293 30.834-112.592-7.258-11.543c-30.552-48.58-46.689-104.729-46.665-162.379C65.146 198.865 202.065 62 370.419 62c81.521.031 158.154 31.81 215.779 89.482s89.342 134.332 89.311 215.859c-.07 168.242-136.987 305.117-305.211 305.117m167.415-228.514c-9.176-4.591-54.286-26.782-62.697-29.843-8.41-3.061-14.526-4.591-20.644 4.592-6.116 9.182-23.7 29.843-29.054 35.964-5.351 6.122-10.703 6.888-19.879 2.296-9.175-4.591-38.739-14.276-73.786-45.526-27.275-24.32-45.691-54.36-51.043-63.542-5.352-9.183-.569-14.148 4.024-18.72 4.127-4.11 9.175-10.713 13.763-16.07 4.587-5.356 6.116-9.182 9.174-15.303 3.059-6.122 1.53-11.479-.764-16.07-2.294-4.591-20.643-49.739-28.29-68.104-7.447-17.886-15.012-15.466-20.644-15.746-5.346-.266-11.469-.323-17.585-.323-6.117 0-16.057 2.296-24.468 11.478-8.41 9.183-32.112 31.374-32.112 76.521s32.877 88.763 37.465 94.885c4.587 6.122 64.699 98.771 156.741 138.502 21.891 9.45 38.982 15.093 52.307 19.323 21.981 6.979 41.983 5.994 57.793 3.633 17.628-2.633 54.285-22.19 61.932-43.616 7.646-21.426 7.646-39.791 5.352-43.617-2.293-3.826-8.41-6.122-17.585-10.714"></path></g>
  </svg>

  <span>Send Inquiry on WhatsApp</span>
</button>




        <p class="text-xs text-gray-400 text-center">
  You’ll be redirected to WhatsApp to complete your inquiry
</p>

      </form>

    </div>
  </div>
</section>

<script>
  const btn = document.getElementById("whatsappBtn");
  const FORM_MIN_TIME = 5000; // 5 seconds
  const MAX_ATTEMPTS = 2;
  const WINDOW_MS = 10 * 60 * 1000; // 10 minutes

  const formLoadedAt = Date.now();

  /* ---------- REF HANDLING (no reuse) ---------- */
  function getOrCreateRef() {
    let ref = sessionStorage.getItem("wa_ref");

    if (!ref) {
      ref = "INQ-" + Math.random().toString(36).substring(2, 7).toUpperCase();
      sessionStorage.setItem("wa_ref", ref);
    }

    return ref;
  }

  function clearRef() {
    sessionStorage.removeItem("wa_ref");
  }

  btn?.addEventListener("click", () => {
    const form = btn.closest("form");

    /* ---------- 1. Honeypot check ---------- */
    if (form.company && form.company.value) {
      return; // silent fail for bots
    }

    /* ---------- 2. Time-based gate ---------- */
    if (Date.now() - formLoadedAt < FORM_MIN_TIME) {
      alert("Please review your details before sending the inquiry.");
      return;
    }

    /* ---------- 3. localStorage throttle ---------- */
    const now = Date.now();
    const history = JSON.parse(localStorage.getItem("wa_attempts") || "[]")
      .filter(ts => now - ts < WINDOW_MS);

    if (history.length >= MAX_ATTEMPTS) {
      alert("You’ve recently sent an inquiry. Please try again later.");
      return;
    }

    history.push(now);
    localStorage.setItem("wa_attempts", JSON.stringify(history));

    /* ---------- 4. Read & validate inputs ---------- */
    const name = form.name.value.trim();
    const email = form.email.value.trim();
    const phone = form.phone.value.trim();
    const message = form.message.value.trim();
    const product = form.product.value || "Product Inquiry";

    if (!name || !email) {
      alert("Please enter your name and email.");
      return;
    }

    /* ---------- 5. Lock button ---------- */
    btn.disabled = true;
    btn.classList.add("opacity-70", "cursor-not-allowed");

    /* ---------- 6. Reference + timestamp ---------- */
    const ref = getOrCreateRef();
    const time = new Date().toLocaleString("en-IN", {
      timeZone: "Asia/Kolkata",
    });

    /* ---------- 7. WhatsApp message ---------- */
    const text = `
Hello,

I’d like to inquire about the following product:

Product: ${product}
Name: ${name}
Email: ${email}
Phone: ${phone || "—"}

Requirement:
${message || "—"}

Ref: ${ref}
Time: ${time}

Please share specifications and pricing.
    `.trim();

    const whatsappNumber = "917510525928";
    const url = `https://wa.me/${whatsappNumber}?text=${encodeURIComponent(text)}`;

    /* ---------- 8. Optional silent store ---------- */
    fetch("/api/inquiry", {
      method: "POST",
      body: new FormData(form),
    }).catch(() => {});

    window.open(url, "_blank");

    /* ---------- 9. Clear ref so it cannot be reused ---------- */
    clearRef();

    /* ---------- 10. Auto-unlock after delay ---------- */
    setTimeout(() => {
      btn.disabled = false;
      btn.classList.remove("opacity-70", "cursor-not-allowed");
    }, 5000);
  });
</script>



