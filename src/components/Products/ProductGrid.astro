---
import ProductCard from "./ProductCard.astro";
const { products } = Astro.props;
---

<div
  class="
    container
    mt-8
    grid
    grid-cols-2
    sm:grid-cols-3
    lg:grid-cols-4
    xl:grid-cols-5
    gap-4 sm:gap-6 lg:gap-8
  "
>
  {products.map((p) => (
    <ProductCard product={p} />
  ))}
</div>
