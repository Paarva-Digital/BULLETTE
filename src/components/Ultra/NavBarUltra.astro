<script>
import { gsap } from "gsap";

const header = document.getElementById("header");
const headerInner = header.querySelector(".sm\\:container");
let lastScroll = 0;
let isHidden = false;

const isMobile = window.innerWidth < 640;

// ðŸŸ¢ Initial setup - hide header above viewport
gsap.set(header, { 
  y: -120, // Use fixed pixel value instead of percentage
});

// ðŸŸ¢ Animate header slide-in on load
window.addEventListener("load", () => {
  const timeline = gsap.timeline({ delay: 0.2 }); // Small delay for better UX
  
  timeline
    .to(header, { 
      y: 0, // Slide to natural position
      autoAlpha: 1, // Animates to opacity: 1 and visibility: visible
      duration: 0.8,
      ease: "power2.out" // Smooth, natural ease
    })
});

// ðŸŸ¢ Scroll hide/show
window.addEventListener("scroll", () => {
  const currentScroll = window.scrollY;

  if (currentScroll < 100) {
    gsap.to(header, { y: 0, autoAlpha: 1, duration: 0.8, ease: "power3.out" });
    isHidden = false;
    return;
  }

  if (currentScroll > lastScroll && !isHidden) {
    gsap.to(header, { y: "-110%", autoAlpha: 0, duration: 0.8, ease: "power3.out" });
    isHidden = true;
  } else if (currentScroll < lastScroll && isHidden) {
    gsap.to(header, { y: 0, autoAlpha: 1, duration: 0.8, ease: "power3.out" });
    isHidden = false;
  }

  lastScroll = currentScroll;
});

  document.addEventListener("DOMContentLoaded", () => {
    const menuIcon = document.getElementById("menuIcon");
    const sidebar = document.getElementById("sidebar");
    const closesidebar = document.getElementById("closesidebar");
    const body = document.body;

    const openSidebar = () => {
      sidebar.classList.remove("translate-x-full");
      sidebar.classList.add("translate-x-0");
      body.style.overflow = "hidden";
    };

    const closeSidebar = () => {
      sidebar.classList.remove("translate-x-0");
      sidebar.classList.add("translate-x-full");
      body.style.overflow = "";
    };

    menuIcon?.addEventListener("click", openSidebar);
    closesidebar?.addEventListener("click", closeSidebar);

    document.addEventListener("click", (e) => {
      if (!sidebar.contains(e.target) && !menuIcon.contains(e.target)) {
        closeSidebar();
      }
    });
  });

</script>





