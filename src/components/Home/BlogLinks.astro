---
const { section } = Astro.props;

const posts = section?.posts ?? [];

// Expect exactly 3 posts
const [featured, second, third] = posts;
---
{posts.length >= 3 && (
<section class="bg-white py-16 sm:py-20">
  <div class="container mx-auto px-6">

    <!-- HEADER -->
    <div class="flex flex-col sm:flex-row sm:items-center sm:justify-between gap-6 mb-10">
      <div>
        <h2 class="text-3xl sm:text-4xl font-medium text-gray-900">
          {section.heading}
        </h2>
        <p class="text-lg text-gray-600 mt-2 max-w-xl">
          {section.subheading}
        </p>
      </div>

      <a
        href="/blog"
        class="inline-flex items-center justify-center
               px-6 py-3 rounded-full bg-red-600
               text-white font-medium
               hover:bg-yellow-400 transition"
      >
        View All
      </a>
    </div>

    <!-- ================= MOBILE : SWIPER ================= -->
    <div class="lg:hidden">

      <swiper-container
        id="blogSwiper"
        init="false"
        slides-per-view="1"
        space-between="16"
        loop="false"
      >
        {[featured, second, third].map((post) => (
          <swiper-slide>
            <a
              href={`/blog/${post.slug.current}`}
              class="group rounded-3xl overflow-hidden bg-white
                     border border-gray-200 transition flex flex-col"
            >
              <div class="relative h-52 overflow-hidden">
                <img
                  src={post.coverImage?.asset?.url}
                  alt={post.title}
                  class="absolute inset-0 w-full h-full object-cover
                         group-hover:scale-105 transition duration-500"
                />
              </div>

              <div class="p-6 flex flex-col gap-4">
                <h3 class="text-lg font-semibold text-gray-900">
                  {post.title}
                </h3>

                <p class="text-gray-600">
                  {post.excerpt}
                </p>

                <div class="flex justify-between text-sm text-gray-500">
                  <span>{post.author}</span>
                  <span>{new Date(post.publishedAt).toLocaleDateString()}</span>
                </div>

                <span class="w-fit px-5 py-2 rounded-full bg-red-600 text-white text-sm font-medium">
                  Read More
                </span>
              </div>
            </a>
          </swiper-slide>
        ))}
      </swiper-container>

      <!-- NAVIGATION (LIKE BEFORE) -->
      <div class="flex items-center justify-center gap-4 mt-3 text-gray-400">

        <button
          id="blogPrev"
          class="disabled:opacity-30 disabled:cursor-not-allowed transition"
          disabled
        >
          <svg width="18" height="18" viewBox="0 0 24 24" fill="none">
            <path d="M15 18L9 12L15 6"
              stroke="currentColor" stroke-width="2"
              stroke-linecap="round" stroke-linejoin="round" />
          </svg>
        </button>

        <span
          id="blogFraction"
          class="text-sm font-medium text-gray-500 min-w-[48px] text-center"
        >
          1 / 3
        </span>

        <button
          id="blogNext"
          class="disabled:opacity-30 disabled:cursor-not-allowed transition"
        >
          <svg width="18" height="18" viewBox="0 0 24 24" fill="none">
            <path d="M9 6L15 12L9 18"
              stroke="currentColor" stroke-width="2"
              stroke-linecap="round" stroke-linejoin="round" />
          </svg>
        </button>

      </div>
    </div>

    <!-- ================= DESKTOP : GRID ================= -->
    <div class="hidden lg:grid grid-cols-3 gap-8 mt-6">

      <!-- FEATURED -->
      <a
        href={`/blog/${featured.slug.current}`}
        class="group rounded-3xl overflow-hidden bg-white
               border border-gray-200 transition flex flex-col"
      >
        <div class="relative aspect-[4/3] overflow-hidden">
          <img
            src={featured.coverImage?.asset?.url}
            alt={featured.title}
            class="absolute inset-0 w-full h-full object-cover
                   group-hover:scale-105 transition duration-500"
          />
        </div>

        <div class="p-6 flex flex-col gap-4">
          <h3 class="text-xl font-semibold text-gray-900">
            {featured.title}
          </h3>
          <p class="text-gray-600">{featured.excerpt}</p>
        </div>
      </a>

      <!-- RIGHT COLUMN -->
      <div class="grid grid-rows-2 gap-8 col-span-2">
        {[second, third].map((post) => (
          <a
            href={`/blog/${post.slug.current}`}
            class="group rounded-3xl overflow-hidden bg-white
                   border border-gray-200 transition flex"
          >
            <div class="relative w-1/2 overflow-hidden">
              <img
                src={post.coverImage?.asset?.url}
                alt={post.title}
                class="absolute inset-0 w-full h-full object-cover"
              />
            </div>

            <div class="p-6 flex flex-col gap-4">
              <h3 class="text-lg font-semibold text-gray-900">
                {post.title}
              </h3>
              <p class="text-gray-600">{post.excerpt}</p>
            </div>
          </a>
        ))}
      </div>

    </div>
  </div>
</section>
)}


<script>
  document.addEventListener('DOMContentLoaded', () => {
    const swiperEl = document.querySelector('#blogSwiper')
    if (!swiperEl) return

    const prevBtn = document.querySelector('#blogPrev')
    const nextBtn = document.querySelector('#blogNext')
    const fraction = document.querySelector('#blogFraction')

    // Init swiper-elements manually
    swiperEl.initialize()

    const swiper = swiperEl.swiper
    const total = swiper.slides.length

    function updateUI() {
      prevBtn.disabled = swiper.isBeginning
      nextBtn.disabled = swiper.isEnd
      fraction.textContent = `${swiper.activeIndex + 1} / ${total}`
    }

    // Initial UI state
    updateUI()

    // Button actions
    prevBtn.addEventListener('click', () => swiper.slidePrev())
    nextBtn.addEventListener('click', () => swiper.slideNext())

    // Update on swipe
    swiper.on('slideChange', updateUI)
  })
</script>

